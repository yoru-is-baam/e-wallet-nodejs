<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <h3 class="text-center text-light mt-5 mb-3">Reset Password</h3>
      <form novalidate onsubmit="return checkMailAndPhone()" method="post" action="/users/forgot_password" class="border rounded w-100 mb-5 mx-auto px-3 pt-3 bg-light">
        <div class="form-group">
          <label for="email">Email</label>
          <input name="email" id="email" type="text" class="form-control" placeholder="Email address" value="{{email}}">
        </div>
        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input name="phone" id="phone" type="text" class="form-control" placeholder="Phone Number" value="{{phone}}">
        </div>
        <div class="text-danger text-center mb-3 d-none" id="error-message">Please enter your email</div>
        {{#if error}}
        <div class="text-danger text-center mb-3" id="error-message">{{error}}</div>
        {{/if}}
        <div class="form-group text-center">
          <a href="/users/login" class="btn btn-primary">Back to login</a>
          <button class="btn btn-primary px-5" type="submit">Reset password</button>
        </div>
      </form>
    </div>
  </div>
</div>