<div class="container">
  <h2 class="text-center mt-2 text-light">User Information</h2>
  <div class="row justify-content-center">
    <div class="col-lg-6 border p-3 rounded bg-light mb-3">
      {{> profile_img}}
      <h5 class="mt-2 ml-4">
        <i class="fas fa-dot-circle mr-3 center"></i>Activated account
      </h5>
      {{> user_detail_information name=user.name birth=user.birth email=user.email address=user.address phone=user.phone idFrontPath=user.idFrontPath idBackPath=user.idBackPath}}
      <h5 class="mt-5 ml-4">
        <i class="fas fa-exchange mr-3 center"></i><a href="/admin/recent_transaction/{{user._id}}">Recent transactions</a>
      </h5>
    </div>
  </div>
</div>